include ./helpers/layout-default.jade


block head
	//add any stylesheets and stuff here
	//+addStyle("/url/to/css")
	style.
		ul{
			width: 200px;
			list-style: none;
			margin: 20px 0px 30px 0px;
			padding: 0px;
			border-top: 1px solid gray;
			
			background-color: #eee;
		}
		
		li{
			margin: 0px;
			padding: 10px 0px 10px 0px;
			border-bottom: 1px solid gray;
			cursor: pointer;
		}
		
		li.selected{
			background-color: red;
		}

block body
	h1 Menu
	
	//add a button
	input(data-bind="value:itemName,valueUpdate:'afterkeydown'")
	button(data-bind="click:$root.addItem, visible:itemName") Add Item
	
	//this is our dynamically generated list
	ul(data-bind="foreach:items")
		li(data-bind="text:name, click:$root.selectedItem, css:{selected: $data == $root.selectedItem() }")
		
	div(data-bind="with:selectedItem")
		button(data-bind="click:$root.removeItem") Remove Item
		
		p: strong(data-bind="text:'DELETE \"'+name+'\"'")
		
	
block footer
	+addScript("/js/app/menu.js")